<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:elevation="0dp"
    app:cardCornerRadius="0dp"
    style="@style/Theme.Sabaid.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardNewsImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="4dp"
            android:contentDescription="Headline"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardNewsUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Username"
                android:textStyle="bold"
                style="@style/TextAppearance.Sabaid.Caption" />

            <TextView
                android:id="@+id/cardNewsTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Tanggal"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                style="@style/TextAppearance.Sabaid.Caption" />
        </LinearLayout>

        <TextView
            android:id="@+id/cardNewsJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Judul"
            android:textColor="@color/primary"
            android:textStyle="bold"
            style="@style/TextAppearance.Sabaid.Headline5" />

        <TextView
            android:id="@+id/cardNewsDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Berita"
            style="@style/TextAppearance.Sabaid.Body2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardNewsContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Continue..."
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.Sabaid.Caption" />

            <ImageView
                android:id="@+id/cardNewsBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_bookmark_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
