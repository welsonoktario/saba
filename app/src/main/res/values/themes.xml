<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sabaid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Sabaid.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Sabaid.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.Sabaid.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Sabaid.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Theme.Sabaid.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/grey_200</item>
    </style>

    <style name="Theme.Sabaid.TextInput" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="backgroundColor">@color/grey_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Sabaid.BottomSheet">
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="Theme.Sabaid.AppBar">
        <item name="android:background">@color/white</item>
    </style>
</resources>