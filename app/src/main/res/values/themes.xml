<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sabaid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">#0046cb</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Sabaid.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.Sabaid.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Body1.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Sabaid.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Body2.Bold" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.Sabaid.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">10sp</item>
        <item name="iconTint">@color/white</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextAppearance.Sabaid.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Sabaid.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Theme.Sabaid.FeatureName">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Theme.Sabaid.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/grey_200</item>
    </style>

    <style name="Theme.Sabaid.TextInput" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="backgroundColor">@color/grey_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Sabaid.BottomSheet">
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="Theme.Sabaid.AppBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Sabaid.BottomSheetDragger" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cardBackgroundColor">@color/grey_400</item>
        <item name="cardElevation">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Theme.Sabaid.CardView.Feature" parent="Widget.MaterialComponents.CardView">
        <item name="android:focusable">true</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Theme.Sabaid.TextInputLayout.White" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>